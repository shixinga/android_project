        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mainActivity" />
	<Button 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="secondActivity"
	    android:onClick="secondActivityOnClick"
	    />
